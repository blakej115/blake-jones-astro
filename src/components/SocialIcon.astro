---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<li>
  <a
    class="block max-w-[clamp(26px,3.76vw,40px)] transition-transform hover:rotate-360 hover:scale-150 [&_svg]:w-full [&_svg]:fill-white"
    href={href}
    {...!href.startsWith("mailto:") ? { target: "_blank" } : {}}
  >
    <slot />
  </a>
</li>
