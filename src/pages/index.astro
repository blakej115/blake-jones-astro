---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import SocialIcons from "../components/SocialIcons.astro";
import HoverGrid from "../components/HoverGrid.astro";
---

<Layout title="Blake Jones">
  <main
    class="group flex min-h-screen flex-col items-center justify-center gap-y-[clamp(2rem,6.02vw,4rem)] px-8 py-16"
  >
    <HoverGrid />
    <Logo />
    <h2 class="relative text-center text-[clamp(22px,4.14vw,44px)] font-bold">
      Director of Web Development at <a
        class="block transition-transform hover:scale-115"
        href="https://riverworksmarketing.com/"
        target="_blank">Riverworks Marketing</a
      >
    </h2>
    <SocialIcons />
  </main>
</Layout>
